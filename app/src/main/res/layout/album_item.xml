<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/cardview_album_item_container"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:elevation="20dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/albums_relative_layout_outermost_container"
    android:background="#FAFAFA">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:id="@+id/albums_imageView_artist_album_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Dummy Album Name"
        android:paddingLeft="4dp"
        android:textColor="@color/textColorDark"
        android:fontFamily="monospace"
        android:id="@+id/albums_textView_artist_album_name"
        android:layout_below="@+id/albums_imageView_artist_album_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Dummy Release Date"
        android:paddingLeft="4dp"
        android:textColor="@color/textColorDark"
        android:fontFamily="monospace"
        android:id="@+id/albums_textView_artist_album_release_date"
        android:layout_below="@+id/albums_textView_artist_album_name"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:visibility="visible"
        android:paddingLeft="4dp"
        android:id="@+id/albums_ratingBar_artist_album_popularity"
        android:layout_below="@+id/albums_textView_artist_album_release_date"/>

</RelativeLayout>

</android.support.v7.widget.CardView>