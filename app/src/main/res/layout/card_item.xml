<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/container_for_cardview"
    android:background="#9E9E9E">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_element"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:contentPadding="4dp"
        app:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/relativeLayout_inside_cardview">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:padding="20dp"
                android:scaleType="center"
                android:id="@+id/imageView_for_album_photo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_for_album_name"
                android:layout_below="@+id/imageView_for_album_photo"
                android:paddingLeft="16dp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"
                android:text="Dummy Album"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_for_artist_names"
                android:layout_below="@+id/textView_for_album_name"
                android:fontFamily="sans-serif"
                android:paddingLeft="16dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:text="About Artist"
                android:layout_below="@+id/textView_for_artist_names"
                android:id="@+id/button_for_about_artist"
                android:textColor="@android:color/holo_red_light"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>