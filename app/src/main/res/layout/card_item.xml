<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_element"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    android:elevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/relativeLayout_inside_cardview">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:id="@+id/imageView_for_album_photo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_for_album_name"
                android:layout_below="@+id/imageView_for_album_photo"
                android:paddingLeft="8dp"
                android:fontFamily="sans-serif"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:text="Dummy Album"/>

            <TextView
                android:text="Dummy Artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_for_artist_names"
                android:layout_below="@+id/textView_for_album_name"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:text="About Artist"
                android:layout_below="@+id/textView_for_artist_names"
                android:id="@+id/button_for_about_artist"
                android:textColor="@android:color/holo_red_light"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>